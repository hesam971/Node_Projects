<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <title> eachArticlePage </title>
</head>
<body>
    <%- include('Header.ejs') %>
    <% if(result != 'undefined'){ %>
        <% result.forEach(function(result){ %>
    <div style="margin-top: 15px;" class="container col-12">
        <h1> <%= result.title %> </h1>
        <h6 style="margin-top: 5px;"> <%= result.subtitle %> </h6>
        <p> Posted by <%= result.author %> on <%= result.dataPublished %> </p>
        <p>
            <%= result.body %>
        </p>
        <h5>
            Add Comment
        </h5>
        <form class="row g-3" action="/articleAddComment/<%=result._id%>" method="POST">
        <!-- <% if(typeof error != 'undefined'){ %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong> <%=error %> </strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %> -->
            <div class="col-12">
                <label for="inputAddress" class="form-label"> Subject </label>
                <input type="text" name="comment_subject" class="form-control" value="<%= typeof comment_subject != 'undefined'? comment_subject:''%>">
            </div>
            <div class="col-12">
                <label for="inputAddress" class="form-label"> Name </label>
                <input type="text" name="comment_name" class="form-control" value="<%= typeof comment_name != 'undefined'? comment_name:''%>">
            </div>
            <div class="col-12">
                <label for="inputAddress" class="form-label"> Email </label>
                <input type="text" name="comment_email" class="form-control" value="<%= typeof comment_email != 'undefined'? comment_email:''%>">
            </div>
            <div class="col-12">
                <label for="inputAddress2" class="form-label"> Body </label>
                <textarea name="comment_body" class="form-control" value="<%= typeof comment_body != 'undefined'? comment_body:''%>" rows="3"></textarea>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary"> Add Comment </button>
            </div>
        </form>
    </div>
        <% }) %>
    <% } %>

    <% if(resu.comments != 'undefined'){ %>
        <% resu.forEach(function(result){ %>
            <div class="container col-12" style="margin-top: 35px;">
                <h4>Comments</h4>
                <div class="col-12" style="margin-top: 20px;">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <h5 style="margin-top: 5px;"> posted by <%=result.comment_name %> </h5>
                            <p>  <%=result.comment_body %> </p>
                        </li>
                    </ul>
                </div>
            </div>
        <% }) %>
    <% } %>




    <%- include('Footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>