<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <title> movies </title>
</head>
<body class="bg-secondary">
    
    <%- include('Navbar.ejs') %>

    <div class="container col-12">
        <div class="row" style="color: wheat;">
            <div class="col-8" style="margin-top: 25px;">
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    <% if(result != 'undefined'){ %>
                        <% result.forEach(function(result){ %>
                            <div class="col">
                                <div class="card h-100 bg-secondary" style="border: none;">
                                    <img src="<%= result.coverUrl %>" style="height: 300px;" class="card-img-top" alt="<%= result.title %>">
                                <div class="card-body">
                                    <h5 class="card-title"> <%= result.title %> </h5>
                                    <div class="col-12">
                                        <a class="btn btn-warning col-auto" href="/eachMoviesInfo/<%= result._id %>"> Info </a>
                                        <a class="btn btn-warning col-auto" href="<%= result.trailerCode %>"> View Trailler </a>
                                    </div>
                                </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </div>
            <%- include('leftColumn.ejs') %>
        </div>
    </div>

    <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>